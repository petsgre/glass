/* pages/book/index.wxss */

swiper {
  height: 160px;
}

swiper image {
  width: 100%;
  height: 160px;
}

.icon-box {
  padding: 10px 20px;
  display: flex;
  height: 80px;
  justify-content: space-between;
}

.icon-item {
  width: 80px;
  height: 80px;
  font-size: 12px;
  text-align: center;
}

.icon-item-icon {
  width: 60px;
  height: 60px;
  margin: 0 auto;
  border-radius: 50%;
  text-align: center;
  line-height: 60px;
}

.icon-item-icon .iconfont {
  font-size: 30px;
  color: #fff;
}

.divide {
  height: 10px;
  width: 100%;
  background-color: #f2f2f2;
}

.select-box {
  display: flex;
  border-bottom: 1px solid #f2f2f2;
}

.select-item {
  flex: 1;
  font-size: 12px;
  text-align: center;
  padding: 8px 0;
}

.select-item .iconfont {
  color: #ccc;
  vertical-align: middle;
}

.book-list {
  padding: 0 20px;
}

.book-list-item {
  display: flex;
  position: relative;
  padding: 10px 0;
  border-bottom: 1px solid #f2f2f2;
}

.book-left {
  width: 50px;
  padding-right: 10px;
}

.book-left image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.book-right {
  flex: 1;
}

.address {
  float: right;
  font-size: 12px;
  color: rgb(129, 129, 129);
}

.address .iconfont {
  vertical-align: middle;
  margin-right: 2px;
}

.label {
  font-size: 13px;
  margin: 2px 0;
}

.summary {
  font-size: 12px;
  color: #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin: 2px 0 8px 0;
}

.tool {
  font-size: 13px;
}

.tool text {
  vertical-align: middle;
}

.tool text .iconfont {
  margin-right: 4px;
  color: #0900d4;
  font-size: 12px;
}
